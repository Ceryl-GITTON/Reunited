<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Titre du widget -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Retrouvailles ðŸ’–"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <!-- Container pour le compte Ã  rebours -->
    <LinearLayout
        android:id="@+id/countdown_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_title"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Jours -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:id="@+id/widget_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textColor="#FFE4E1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jours"
                android:textColor="#FFB6C1"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Heures -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:id="@+id/widget_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="#FFE4E1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heures"
                android:textColor="#FFB6C1"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Minutes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:id="@+id/widget_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="#FFE4E1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes"
                android:textColor="#FFB6C1"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <!-- Message d'encouragement -->
    <TextView
        android:id="@+id/widget_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countdown_container"
        android:layout_marginTop="8dp"
        android:text="BientÃ´t les retrouvailles!"
        android:textAlignment="center"
        android:textColor="#FFB6C1"
        android:textSize="12sp"
        android:textStyle="italic"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Date de rÃ©union -->
    <TextView
        android:id="@+id/widget_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="15 septembre 2025"
        android:textAlignment="center"
        android:textColor="#FF69B4"
        android:textSize="11sp"
        android:textStyle="bold" />

</RelativeLayout>
